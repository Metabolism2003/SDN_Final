# FRR daemons configuration
# Using classic fpm module (zebra_fpm.so) for ONOS compatibility
# Module location: /usr/lib/x86_64-linux-gnu/frr/modules/zebra_fpm.so

bgpd=yes
ospfd=no
ospf6d=no
ripd=no
ripngd=no
isisd=no
pimd=no
ldpd=no
nhrpd=no
eigrpd=no
babeld=no
sharpd=no
pbrd=no
bfdd=no
